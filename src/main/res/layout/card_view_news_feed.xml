<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/myNfLayout"
    >


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/myNfCardView"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        card_view:cardCornerRadius="4dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:id="@+id/myNfImage"
                android:scaleType="centerCrop"
                android:src="@drawable/card_image_placeholder"
                />

            <TextView
                android:id="@+id/myNfText"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin ac lorem iaculis tortor bibendum pharetra a finibus tortor. Fusce sagittis ligula vel libero tincidunt, eu pulvinar enim gravida. "
                android:layout_below="@id/myNfImage"/>

            <TextView
                android:id="@+id/bookmark"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="right"
                android:text="I'm in!    "
                android:textStyle="bold"
                android:layout_below="@id/myNfText"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>